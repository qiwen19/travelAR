<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/routeDetailCard"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:minHeight="200sp"
        app:cardBackgroundColor="#D15252"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="5dp">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLayoutImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="298dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewRouteName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#2D4DBF" />

                    <TextView
                        android:id="@+id/textViewRouteStartEndTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#65D64C"
                        android:text="eg: start: 1am end:2am" />

                    <TextView
                        android:id="@+id/textViewRouteDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#E1C123"
                        android:text="Details?? Rough Details? If have"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textViewTimeTaken"
                    android:layout_width="88dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#19DDD7"
                    android:gravity="center" />

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>